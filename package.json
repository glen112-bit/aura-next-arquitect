{
	"private": "true",
	"workspaces": {
		"packages": [
			"packages/*",
			"projects/*",
			"setup/*"
		]
	},
	"scripts": {
		"lint": "npm --workspaces run lint",
		"web-public": "npm --workspace @alura/web-public",
		"dev:web-public": "npm run web-public run dev",
		"build:web-public": "npm run web-public run build",
		"lint:web-public": "npm run web-public run lint --fix",
		"design-system": "npm --workspace @alura/design-system"
	},
	"dependencies": {
		"@types/node": "^20.11.26",
		"@types/react": "^18.2.65",
		"@types/styled-components": "^5.1.34",
		"@types/jest": "^29.5.12",
		"eslint-config-next": "^14.1.3",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.0",
		"eslint": "^8.57.0",
		"prettier": "^3.2.5",
		"typescript": "4.0.5",
		"typescript-eslint": "^7.2.0"
	}
}
