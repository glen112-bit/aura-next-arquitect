{
	"private": "true",
	"workspaces": {
		"packages": [
			"packages/*",
			"projects/*",
			"setup/*"
		]
	},
	"scripts": {
		"lint": "npm --workspaces run lint",
		"web-public": "npm --workspace @alura/web-public",
		"dev:web-public": "npm run web-public run dev",
		"build:web-public": "npm run web-public run build",
		"lint:web-public": "npm run web-public run lint --fix",
		"utils": "npm --workspace @alura/utils",
		"test:utils": "npm run utils run test",
		"design-system": "npm --workspace @alura/design-system",
		"test:design-system": "npm run design-system run test"
	},
	"dependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.26",
		"@types/react": "^18.2.65",
		"@types/styled-components": "^5.1.34",
		"eslint": "^8.57.0",
		"eslint-config-next": "^14.1.3",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.0",
		"prettier": "^3.2.5",
		"typescript": "4.0.5",
		"typescript-eslint": "^7.2.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^14.2.1",
		"@types/jest": "^29.5.12",
		"babel-jest": "^29.7.0",
		"babel-plugin-styled-components": "^2.1.4",
		"eslint": "^8.57.0",
		"eslint-plugin-jest": "26.1.5",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"react-table": "^7.8.0",
		"regenerator-runtime": "^0.14.1"
	}
}
